<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.loong.template">

    <application
        android:name=".APP"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".common.activity.ModifyPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".common.activity.ForgetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".common.activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".common.activity.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/LauncherActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".common.activity.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait" /> <!-- 修改应用的版本管理 -->

        
        <meta-data
            android:name="nk_url"
            android:value="${UPDATE_URL}" />
        <meta-data
            android:name="nk_appid"
            android:value="${UPDATE_APPID}" />
    </application>

</manifest>